# Linux Production Environment Variables
# Copy this to .env.linux and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=compliance_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=compliance_db

# =============================================================================
# LLM Configuration (Gemini)
# =============================================================================
LLM_API_KEY=your_gemini_api_key
LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
LLM_MODEL=gemini-2.0-flash

# =============================================================================
# Firebase Configuration
# =============================================================================
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id

# =============================================================================
# LangSmith (Observability)
# =============================================================================
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=compliance-agent-prod

# =============================================================================
# PgAdmin (Optional - for debugging)
# =============================================================================
PGADMIN_EMAIL=admin@local.com
PGADMIN_PASSWORD=your_pgadmin_password

# =============================================================================
# Performance Tuning
# =============================================================================
# Number of Gunicorn workers (recommended: 2 * CPU cores + 1)
GUNICORN_WORKERS=4

# Max upload size in MB
MAX_UPLOAD_SIZE=100
